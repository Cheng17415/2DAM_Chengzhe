<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:stretchColumns="1,2,3,4"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="192dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/relleno1"
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_height="70dp"/>

            <ImageView
                android:id="@+id/imagen1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/imagen2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/imagen3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imagen4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/relleno2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"/>

            <TextView
                android:id="@+id/tituloh1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Dolar"/>

            <TextView
                android:id="@+id/tituloh2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Euro"/>

            <TextView
                android:id="@+id/tituloh3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Yen"/>

            <TextView
                android:id="@+id/tituloh4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Libra"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titulov1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Dolar"/>

            <TextView
                android:id="@+id/dd"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:inputType="number"
                android:background="@drawable/inputamarillo"/>

            <EditText
                android:id="@+id/de"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:inputType="numberDecimal"
                android:background="@drawable/inputs"
                android:gravity="center"/>

            <EditText
                android:id="@+id/dy"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:inputType="numberDecimal"
                android:background="@drawable/inputs"
                android:gravity="center"/>

            <EditText
                android:id="@+id/dl"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:inputType="numberDecimal"
                android:background="@drawable/inputs"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titulov2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Euro"/>

            <TextView
                android:id="@+id/ed"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:inputType="numberDecimal"
                android:background="@drawable/inputs"
                android:textAlignment="textEnd"/>
            <TextView
                android:id="@+id/ee"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:inputType="number"
                android:background="@drawable/inputamarillo"/>

            <TextView
                android:id="@+id/ey"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:inputType="numberDecimal"
                android:background="@drawable/inputs"
                android:textAlignment="textEnd"/>

            <TextView
                android:id="@+id/el"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:inputType="numberDecimal"
                android:background="@drawable/inputs"
                android:textAlignment="textEnd"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titulov3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Yen"/>

            <TextView
                android:id="@+id/yd"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:inputType="numberDecimal"
                android:background="@drawable/inputs"
                android:textAlignment="textEnd"/>

            <TextView
                android:id="@+id/ye"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:inputType="numberDecimal"
                android:background="@drawable/inputs"
                android:textAlignment="textEnd"/>

            <TextView
                android:id="@+id/yy"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:inputType="number"
                android:background="@drawable/inputamarillo"/>

            <TextView
                android:id="@+id/yl"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:inputType="numberDecimal"
                android:background="@drawable/inputs"
                android:textAlignment="textEnd"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titulov4"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Libra"/>

            <TextView
                android:id="@+id/ld"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:inputType="numberDecimal"
                android:background="@drawable/inputs"
                android:textAlignment="textEnd"/>

            <TextView
                android:id="@+id/le"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:inputType="numberDecimal"
                android:background="@drawable/inputs"
                android:textAlignment="textEnd"/>

            <TextView
                android:id="@+id/ly"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:inputType="numberDecimal"
                android:background="@drawable/inputs"
                android:textAlignment="textEnd"/>
            <TextView
                android:id="@+id/ll"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:inputType="number"
                android:background="@drawable/inputamarillo"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>